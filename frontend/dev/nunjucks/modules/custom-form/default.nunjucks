<article class="container" variant="api-form">
    <section class="unit" variant="custom-form-posted" state="hidden">
        <p>Bedankt het formulier is correct verzonden</p>
    </section>

    <form class="form" action="http://localhost:3000/posts" method="POST" state="active" name="form" novalidate>
        <section class="unit" variant="error-message" state="hidden">
            <p>U heeft geen juist emailadres ingevuld.</p>
        </section>

        <section class="unit">
            <div class="form-label">
                <label for="company">Bedrijf</label>
            </div>
            <div class="form-input">
                <input class="input" variant="text" type="text" name="title" />
            </div>
        </section>
        <section class="unit">
            <div class="form-label">
                <label for="name">Naam</label>
            </div>
            <div class="form-input">
                <input class="input" variant="text" type="text" name="author"  />
            </div>
        </section>

        <section class="unit">

        <p>
        <input type="checkbox" id="test1" />
        <label for="test1">Red</label>
        </p>
        <p>
        <input type="checkbox" id="test2" checked="checked" />
        <label for="test2">Yellow</label>
        </p>
        <p>
        <input type="checkbox" id="test3" checked="checked" disabled="disabled" />
        <label for="test3">Green</label>
        </p>
        <p>
            <input type="checkbox" id="test4" disabled="disabled" />
            <label for="test4">Brown</label>
        </p>

        </section>

        <section class="unit">
            <button type="submit" class="submit-button" id="button-submit" variant="color-blue">
                <span class="multiplelines">data toevoegen</span>
            </button>
        </section>
    </form>
</article>